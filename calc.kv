
<ItemButton@MDFlatButton>:
	font_size: "30sp"
	text_size: self.size
	size_hint: 1, 1


<Container>: 
	


	button7: button7
	button8: button8
	button9: button9

	button4: button4
	button5: button5
	button6: button6

	button1: button1
	button2: button2
	button3: button3 

	button0: button0
	button_dot: button_dot
	button_slash: button_slash
	button_bs: button_bs

	button_star: button_star
	button_plus: button_plus
	button_minus: button_minus
	button_res: button_res

	button_bracket_left: button_bracket_left
	button_bracket_right: button_bracket_right
	button_root: button_root

	lebel: lebel

	BoxLayout:
		size_hint: 1, 1
		orientation: 'vertical'

		BoxLayout:
			size_hint: 0.95, 0.6

			MDLabel:
				halign: "right"
				valign: "middle"
				id: lebel
				text: "0"
				font_size: "60sp"
				text_size: 1000, None
				

		BoxLayout:
			size_hint: 1, 0.2
			canvas:
				Color:
					rgb: [.30,.75,.70]
				Rectangle:
					pos: self.pos
					size: self.size
			ItemButton:
				id: button_bracket_left
				text: "("
				on_release:
					root.add_numb(button_bracket_left)

			ItemButton:
				id: button_bracket_right
				text: ")"
				on_release:
					root.add_numb(button_bracket_right)
			ItemButton:
				id: button_percent
				text: "%"
				on_release:
					root.add_oper(button_percent)

			ItemButton:
				id: button_root
				text: "âˆš"
				on_release:
					root.add_numb(button_root)

			MDIconButton:
				id: button_square
				icon: "apple-keyboard-control"
				user_font_size: "30sp"
				text_size: self.size
				size_hint: 1, 1
				on_release:
					root.add_square()
		BoxLayout:
			size_hint: 1, 1

			GridLayout:
				size_hint: 0.7, 1
				cols: 3
				canvas:
					Color:
						rgb: [1,1,1]
					Rectangle:
						pos: self.pos
						size: self.size

				ItemButton:
					id: button7
					text: "7"
					on_release:
						root.add_numb(button7)
				ItemButton:
					id: button8
					text: "8"
					on_release:
						root.add_numb(button8)
				ItemButton:
					id: button9
					text: "9"
					on_release:
						root.add_numb(button9)

				ItemButton:
					id: button4
					text: "4"
					on_release:
						root.add_numb(button4)
				ItemButton:
					id: button5
					text: "5"
					on_release:
						root.add_numb(button5)
				ItemButton:
					id: button6
					text: "6"
					on_release:
						root.add_numb(button6)
				ItemButton:
					id: button1
					text: "1"
					on_release:
						root.add_numb(button1)
				ItemButton:
					id: button2
					text: "2"
					on_release:
						root.add_numb(button2)
				ItemButton:
					id: button3
					text: "3"
					on_release:
						root.add_numb(button3)
				#Widget
				ItemButton:
					id: button0
					text: "0"
					on_release:
						root.add_numb(button0)

				ItemButton:
					id: button_dot
					text: "."
					on_release:
						root.add_oper(button_dot)


			GridLayout:
				size_hint: 0.3, 1
				cols:2
				canvas:
					Color:
						rgb: [0.95,0.95,0.95]
					Rectangle:
						pos: self.pos
						size: self.size

				ItemButton:
					id: button_slash
					text: "/"
					on_release:
						root.add_oper(button_slash)
				MDIconButton:
					id: button_bs
					icon: "backspace-outline"
					user_font_size: "30sp"
					size_hint: 1, 1
					text_size: self.size
					on_press:
						root.on_state(button_bs)
					on_release:
						root.backspace(button_bs)
				ItemButton:
					id: button_star
					text: "*"
					on_release:
						root.add_oper(button_star)
				Widget
				ItemButton:
					id: button_minus
					text: "-"
					on_release:
						root.add_oper(button_minus)
				Widget			
				ItemButton:
					id: button_plus
					text: "+"
					on_release:
						root.add_oper(button_plus)
				ItemButton:
					id: button_res
					text: "="
					on_release:
						root.result(button_res)

	
	



	
